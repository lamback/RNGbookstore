<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>enterCart</servlet-name>
        <servlet-class>servlet.enterCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>enterCart</servlet-name>
        <url-pattern>/servlet/enterCart</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>servlet.delete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/servlet/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>servlet.add</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/servlet/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>remove</servlet-name>
        <servlet-class>servlet.remove</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>remove</servlet-name>
        <url-pattern>/servlet/remove</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>enterOrder</servlet-name>
        <servlet-class>servlet.enterOrder</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>enterOrder</servlet-name>
        <url-pattern>/servlet/enterOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>alterState</servlet-name>
        <servlet-class>servlet.alterUserOrderStateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>alterState</servlet-name>
        <url-pattern>/alterUserOrderStateServlet</url-pattern>
    </servlet-mapping>

    <!--设置欢迎界面-->
    <welcome-file-list>
        <welcome-file>firstPage.html</welcome-file>
        <!--<welcome-file>index.jsp</welcome-file>-->
    </welcome-file-list>
</web-app>